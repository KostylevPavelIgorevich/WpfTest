<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfTest.Views"
        Title="Система тестирования" Height="600" Width="800">
    <DockPanel>
        <!-- Верхняя панель кнопок -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <Button Content="Создать тест" Width="120" Margin="0,0,10,0" Click="CreateTest_Click"/>
            <Button Content="Пройти тест" Width="120" Click="RunTest_Click"/>
        </StackPanel>

        <!-- Здесь будет отображаться View -->
        <ContentControl x:Name="MainContent" Margin="10"/>
    </DockPanel>
</Window>
